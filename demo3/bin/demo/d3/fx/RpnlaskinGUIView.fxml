<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="demo.d3.fx.RpnlaskinGUIController">
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="buttonEnter" mnemonicParsing="false" onAction="#monistaAlin" text="Enter">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonPlus" mnemonicParsing="false" onAction="#laskeSumma" prefWidth="25.0" text="+">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonMiinus" mnemonicParsing="false" onAction="#laskeErotus" prefWidth="25.0" text="-">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonKerto" mnemonicParsing="false" onAction="#laskeKerto" onKeyPressed="#laskeKerto" prefWidth="25.0" text="*">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonJako" mnemonicParsing="false" onAction="#laskeJako" prefWidth="25.0" text="/">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <TextArea fx:id="textAreaNaytto" prefWidth="300.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
