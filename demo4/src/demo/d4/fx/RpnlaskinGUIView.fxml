<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="demo.d4.fx.RpnlaskinGUIController">
   <center>
      <TextArea fx:id="textAreaNaytto" prefWidth="300.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Button fx:id="buttonEnter" mnemonicParsing="false" onAction="#monistaAlin" text="Enter">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="buttonPlus" mnemonicParsing="false" onAction="#laskeSumma" prefWidth="25.0" text="+">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="buttonMiinus" mnemonicParsing="false" onAction="#laskeErotus" prefWidth="25.0" text="-">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="buttonKerto" mnemonicParsing="false" onAction="#laskeKerto" onKeyPressed="#laskeKerto" prefWidth="25.0" text="*">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="buttonJako" mnemonicParsing="false" onAction="#laskeJako" prefWidth="25.0" text="/">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="buttonSqrt" mnemonicParsing="false" onAction="#laskeSqrt" onKeyPressed="#laskeKerto" text="Sqrt">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="buttonSwap" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#laskeSwap" onKeyPressed="#laskeKerto" text="Swap">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="buttonCHS" layoutX="35.0" layoutY="10.0" mnemonicParsing="false" onAction="#laskeCHS" onKeyPressed="#laskeKerto" text="CHS" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
